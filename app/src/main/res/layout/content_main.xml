<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin"
    tools:context="net.harimurti.safecharging.activity.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_side_margin"
        android:paddingRight="@dimen/activity_side_margin"
        android:fontFamily="sans-serif"
        android:text="@string/label_info"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:typeface="normal" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_level" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_space_margin"
            android:paddingRight="@dimen/activity_space_margin"
            android:text="@string/label_titikdua" />

        <TextView
            android:id="@+id/textLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_zero" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:text="@string/label_persen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_health" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_space_margin"
            android:paddingRight="@dimen/activity_space_margin"
            android:text="@string/label_titikdua" />

        <TextView
            android:id="@+id/textHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_titiktitik" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_status" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_space_margin"
            android:paddingRight="@dimen/activity_space_margin"
            android:text="@string/label_titikdua" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_titiktitik" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/label_service" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_space_margin"
            android:paddingRight="@dimen/activity_space_margin"
            android:text="@string/label_titikdua" />

        <TextView
            android:id="@+id/textService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_titiktitik" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="@dimen/activity_side_margin"
        android:paddingRight="@dimen/activity_side_margin"
        android:fontFamily="sans-serif"
        android:text="@string/label_option"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:typeface="normal" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#737373" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin">

        <Switch
            android:id="@+id/switchLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/textOption1"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_side_sub_margin"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/switchLevel"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textLabelSwitchLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_side_sub_margin"
                android:text="@string/sw_overlevel" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/label_option1"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#737373" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin">

        <Switch
            android:id="@+id/switchUsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/textOption2"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_side_sub_margin"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/switchUsb"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textLabelSwitchUsb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sw_usb" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/label_option2"
            android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#737373" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_side_sub_margin"
        android:paddingRight="@dimen/activity_side_sub_margin">

        <Switch
            android:id="@+id/switchOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_side_sub_margin"
            android:text="@string/sw_overall"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/switchOver" />

    </RelativeLayout>

</LinearLayout>
